<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rewards.rewardsapp.views.HomeActivity"
    android:background="@color/whiteSmoke">

    <Button
        android:id="@+id/sweepstakes"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:text="@string/sweepstakes"
        android:background="@color/colorAccent"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gift_cards"/>

    <Button
        android:id="@+id/gift_cards"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:text="@string/gift_cards"
        android:background="@color/colorAccent"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sweepstakes"
        app:layout_constraintBottom_toTopOf="@+id/cash"/>

    <Button
        android:id="@+id/cash"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:text="@string/cash"
        android:background="@color/colorAccent"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gift_cards"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"/>

</android.support.constraint.ConstraintLayout>


