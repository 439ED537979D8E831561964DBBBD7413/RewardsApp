<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rewards.rewardsapp.views.HomeActivity">

    <Button
        android:background="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:textColor="@color/whiteSmoke"
        android:textSize="40sp"
        android:id="@+id/scratch_button"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:text="@string/scratch_offs"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/slots_button"
        android:onClick="scratchOff"/>

    <Button
        android:background="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:textColor="@color/whiteSmoke"
        android:textSize="40sp"
        android:id="@+id/slots_button"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:text="@string/slots"
        android:onClick="slots"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf= "@+id/scratch_button"
        app:layout_constraintBottom_toTopOf="@+id/passive_button"/>

    <Button
        android:background="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:textColor="@color/whiteSmoke"
        android:textSize="40sp"
        android:id="@+id/passive_button"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:text="@string/passive_earn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf= "@+id/slots_button"
        app:layout_constraintBottom_toTopOf="@+id/coming_button"/>

    <Button
        android:id="@+id/coming_button"
        android:textAllCaps="false"
        android:textColor="@color/whiteSmoke"
        android:textSize="40sp"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:text="@string/coming_soon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf= "@+id/passive_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="false"
        android:layout_marginBottom="50dp"/>

</android.support.constraint.ConstraintLayout>


