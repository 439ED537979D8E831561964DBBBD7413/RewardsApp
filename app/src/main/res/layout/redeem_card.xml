<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:padding="10dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_redeem_card">

        <android.support.v7.widget.CardView
            android:id="@+id/image_box"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_gray_border">

                <ImageView
                    android:id="@+id/type_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/redeem_gift"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:text="$10 Walmart Gift Card"
            android:fontFamily="@font/bree_serif"
            android:textSize="18dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@+id/image_box"
            app:layout_constraintLeft_toRightOf="@+id/image_box"
            />

        <TextView
            android:id="@+id/cost_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:textSize="15dp"
            android:textColor="@color/secondaryText"
            android:fontFamily="@font/bree_serif"
            android:text="10,000 points"
            />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>