<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rewards.rewardsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".views.ScratchActivity"
            android:theme="@style/no_action_bar" />
        <activity
            android:name=".views.SlotsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_slots"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".views.CharityPollActivity"
            android:label="@string/title_activity_charity_poll"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.OverlayEarnActivity"
            android:label="@string/title_activity_charity_poll" />

        <service
            android:name=".views.OverlayHUD"
            android:exported="true"
            android:stopWithTask="true" />

        <activity android:name=".views.AboutActivity"></activity>
    </application>

</manifest>